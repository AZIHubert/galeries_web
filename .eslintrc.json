{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "mocha": true,
        "commonjs": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "plugin:cypress/recommended",
        "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "prettier"
    ],
    "settings": {
        "import/resolver": {
            "typescript": {},
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "rules": {
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": [
                    "**/*.d.ts",
                    "**/*.test.tsx",
                    "**/*.spec.tsx"
                ]
            }
        ],
        "global-require": 0,
        "no-use-before-define": "off",
        "no-console": "off",
        "indent": "off",
        "@typescript-eslint/indent": ["error", 2],
        "@typescript-eslint/naming-convention": [
            "error", {
                "selector": ["interface"],
                "format": ["PascalCase"]
            }
        ],
        "import/extensions": [
            "error",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ]
    }
}
